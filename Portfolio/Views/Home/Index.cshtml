@{
    ViewData["Title"] = "Home Page";
}

<script>
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
</script>

@* General Styles  *@
<style>
    /* General Body Styling */
    body {
        background-color: #F5F5F5; /* Light gray background */
        color: #333333; /* Dark gray text */
        font-family: Arial, sans-serif; /* Professional font */
    }

    /* Headings */
    h1, h2, h3 {
        color: #1E90FF; /* Dodger Blue for headings */
    }

    /* Links */
    a {
        color: #1E90FF; /* Dodger Blue for links */
        text-decoration: none; /* Remove underline */
    }

        a:hover {
            color: #0056b3; /* Darker blue on hover */
        }

    /* Button Styles */
    .btn-primary {
        background-color: #1E90FF; /* Dodger Blue background for buttons */
        color: #FFFFFF; /* White text */
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue for hover effect */
        }

    .btn-outline-secondary {
        color: #333333; /* Dark gray text */
        border-color: #1E90FF; /* Dodger Blue for border */
    }

        .btn-outline-secondary:hover {
            background-color: #1E90FF; /* Dodger Blue background on hover */
            color: #FFFFFF; /* White text on hover */
        }

    /* Footer */
    footer {
        background-color: #343A40; /* Dark gray footer */
        color: #FFFFFF; /* White text */
        padding: 20px 0;
        text-align: center;
    }

    /* Adjusting the Container */
    .container {
        max-width: 1200px; /* Limit the width of the container */
        margin: auto; /* Center the container */
        padding: 20px; /* Add some padding */
    }

    /* Card Styles */
    .card {
        background-color: #FFFFFF; /* White card background */
        color: #333333; /* Dark gray text for readability */
        border: 1px solid #1E90FF; /* Dodger Blue border for cards */
        border-radius: 8px; /* Slightly rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow for subtle depth */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px); /* Slight lift on hover */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Stronger shadow on hover */
        }

    /* Card Title */
    .card-title {
        color: #1E90FF; /* Dodger Blue for title */
    }

    /* Section styles */
    section {
        padding: 100px 0; /* Increase padding for height */
        text-align: center; /* Center text in all sections */
        color: #333333; /* Dark gray text for all sections */
        min-height: 500px; /* Increase min-height for sections */
        margin-bottom: 20px; /* Optional: add margin below each section */
    }

    /* Adjust heading margin to reduce gaps */
    h2 {
        color: #1E90FF; /* Dodger Blue for section titles to stand out */
        margin-bottom: 15px; /* Slightly reduce margin */
    }

    /* Skills Section Title */
    #skills h2 {
        margin-bottom: 20px; /* Space below the title */
        font-size: 2em; /* Adjust font size as needed */
    }

    .filter-buttons {
        margin-bottom: 40px;
    }

    .filter-btn {
        margin: 0 10px;
        padding: 10px 20px;
        cursor: pointer;
        border: none;
        background-color: #f0f0f0;
        border-radius: 5px;
        transition: background-color 0.3s; /* Smooth transition effect */
    }

        .filter-btn.active {
            background-color: #007bff;
            color: white;
        }
    /* Skill List */
    .skill-list {
        display: flex; /* Flexbox for layout */
        flex-wrap: wrap; /* Wrap items to new line if needed */
        justify-content: center; /* Center items */
    }

    .skill-item {
        margin-bottom: 20px; /* Space below each skill item */
        text-align: center; /* Center text inside skill item */
        width: 200px; /* Set a fixed width for uniformity */
    }

</style>

